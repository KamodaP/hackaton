<html metal:use-macro="load: main.pt">

<div metal:fill-slot="content">

<div>
  <input type="radio" name="game_list_type" data-id="all" checked="checked" style="visibility:visible"> All your games<br>
  <input type="radio" name="game_list_type" data-id="public" style="visibility:visible"> Your public games<br>
  <input type="radio" name="game_list_type" data-id="private" style="visibility:visible"> Your private games
</div>


<div class = "container" id="all">
<table>
	<thead>
		<tr>
			<th data-field="name">Name</th>
			<th data-field="owner_id">Owner</th>
			<th data-field="tags">Tags</th>
		</tr>
	</thead>
	<tbody>
		<tr tal:repeat="item all_game_records"><a href="${request.route_url('game_view')}?item.link">
			<td>${item.name}</td>
			<td>${item.owner}</td>
			<td>${item.tags}</td>
		</a></tr>
	</tbody>
</table>
</div>

<div class = "none" id="public">
<table>
	<thead>
		<tr>
			<th data-field="name">Name</th>
			<th data-field="owner_id">Owner</th>
			<th data-field="tags">Tags</th>
		</tr>
	</thead>
	<tbody>
		<tr tal:repeat="item public_game_records">
			<td>${item.name}</td>
			<td>${item.owner}</td>
			<td>${item.tags}</td>
		</tr>
	</tbody>
</table>
</div>

<div class = "none" id="private">
<table>
	<thead>
		<tr>
			<th data-field="name">Name</th>
			<th data-field="owner_id">Owner</th>
			<th data-field="tags">Tags</th>
		</tr>
	</thead>
	<tbody>
		<tr tal:repeat="item private_game_records">
			<td>${item.name}</td>
			<td>${item.owner}</td>
			<td>${item.tags}</td>
		</tr>
	</tbody>
</table>
</div>

<script>
$(':radio').change(function (event) {
    var id = $(this).data('id');
    $('#' + id).addClass('container').siblings().removeClass('none');
});
</script>

</div>
</html>