<html metal:use-macro="load: main.pt">

<div metal:fill-slot="content">

 <script src="https://cdn.rawgit.com/nnattawat/flip/v1.0.19/dist/jquery.flip.min.js"> </script>
<style>
tile {
        width: 120px;
        height: 150px;
        margin: 10px;
		float: left;
      }
      .front, .back {
        padding: 10px;
      }
      .front {
        background-color: #80cbc4;
      }
      .back {
        background-color: #e8eaf6 ;
      }
</style>

<a href="${request.route_url('flashcard')}?game=${gameid}&data=${nextid}">next</a>

<div class="container">
<div id="card-grid tile z-depth-3">
	<div class="front">
		<p> ${dataset.value_1} </p>
	</div>
	<div class="back">
		<p> ${dataset.value_2} </p>
	</div>
</div>
</div>

<script>
$("#card-grid").flip({
  trigger: 'click'
});
</script>

</div>
</html>