<html metal:use-macro="load: main.pt">

<div metal:fill-slot="content">

 <script src="https://cdn.rawgit.com/nnattawat/flip/v1.0.19/dist/jquery.flip.min.js"> </script>
<style>
tile {
        width: 120px;
        height: 150px;
        margin: 10px;
		float: left;
      }
      .front, .back {
        text-align: center;
		vertical-align: middle;
		font-size: 30px;
      }
      .front {
        background-color: #80cbc4;
      }
      .back {
        background-color: #e8eaf6 ;
      }
</style>
<div>
	<p class="btn"><p class="btn"><a href="${request.route_url('flashcard')}?game=${gameid}&data=${nextid}">Next</a></p>
</div>
<div class="container">
<div class="card-grid tile z-depth-3" style="width:30em;height:20em;">
	<div class="front">
		<p> ${dataset.value_1} </p>
	</div>
	<div class="back">
		<p> ${dataset.value_2} </p>
	</div>
</div>
</div>

<script>
$(".card-grid").flip({
  trigger: 'click'
});
</script>

</div>
</html>