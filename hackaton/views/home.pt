<html metal:use-macro="load: main.pt">

<div metal:fill-slot="content">

</head>
<body>
	<header>
		<nav role="navigation">
			<div class="nav-wrapper container">
				<a id="logo-container" href="#" class="brand-logo">logo<!--<img width="150" src="${request.static_url('hackaton:static/images/logo.png')}" alt="Return to the homepage" />--></a>	
				<div  tal:condition = "view.logged_in is None"
					class="right">
					<p class="btn"><a href="${request.route_url('register')}">Register</a></p>
					<p class="btn"><a href="${request.route_url('login')}">Log in</a></p>
				</div>
				<div  tal:condition = "view.logged_in is not None"
					class="right">
					<p class="btn"><a href="${request.route_url('logout')}">Log out</a></p>
				</div>
				<ul class="hide-on-med-and-down right">
					<li><a href="${request.route_url('user_games')}">User Games</a></li>
					<li><a href="#">lol2</a></li>
					<li><a href="#">lol3</a></li>
					<li><a href="#">lol4</a></li>
				</ul>
			</div>
		</nav>
	</header>

<div class="slider container">
    <ul class="slides">
      <li>
        <img width="300" src="${request.static_url('hackaton:static/images/logo.png')}"> 
        <div class="caption center-align">
          <h3>Easy way to learn</h3>
          <h5 class="light grey-text text-lighten-3">Welcome on the site which will help with your studies through a set of different games.</h5>
        </div>
      </li>
      <li>
        <img width="300" src="${request.static_url('hackaton:static/images/logo.png')}"> 
        <div class="caption left-align">
          <h3>Create ans share</h3>
          <h5 class="light grey-text text-lighten-3">Create your own Quizes and play educational games. You will learn what you need in no time!</h5>
        </div>
      </li>
      <li>
        <img width="300" src="${request.static_url('hackaton:static/images/logo.png')}"> 
        <div class="caption right-align">
          <h3>New Learning experience</h3>
          <h5 class="light grey-text text-lighten-3">Learn with us whatever you need!</h5>
        </div>
      </li>
      <li>
        <img width="300" src="${request.static_url('hackaton:static/images/logo.png')}">
        <div class="caption center-align">
          <h3>Don't waste you time! >> joins us mwahaha</h3>
          <h5 class="light grey-text text-lighten-3">Gather points when others will positively assess you quizes!</h5>
        </div>
      </li>
    </ul>
	</div>
<div class = "container">
<table>
	<thead>
		<tr>
			<th data-field="name">Name</th>
			<th data-field="owner_id">Owner</th>
			<th data-field="tags">Tags</th>
		</tr>
	</thead>
	<tbody>
		<tr tal:repeat="item game_records">
			<td>${item.name}</td>
			<td>${item.owner}</td>
			<td>${item.tags}</td>
		</tr>
	</tbody>
</table>
</div>
<script>
	$(document).ready(function(){
		$('.slider').slider({full_width: true});
	});
</script>
</div>
</html>