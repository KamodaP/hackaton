<html metal:use-macro="load: main.pt">

<div metal:fill-slot="content">

	<form class="col s12">
	<div class="row">
		<div class="input-field col s12">
			<input id="game_name" type="taxt" class="validate">
			<label for="email">Email</label>
		</div>
	</div>

	<div class = "container">
	<table>
		<thead>
			<tr>
				<th data-field="value_1">Value 1</th>
				<th data-field="value_2">Value 2</th>
			</tr>
		</thead>
		<tbody>
			<tr tal:repeat="item game_records">
				<td><input id="in_val_1" type="text" class="validate"></td>
				<td><input id="in_val_2" type="text" class="validate"></td>
			</tr>
		</tbody>
	</table>
	</div>	  
    </form>

	<div class="container">
		<div class="row right white">
			<a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
			<!--<p class="btn"><a href="#">Add Game</a></p>
			<p class="btn"><a href="#">Cancel</a></p>-->
		</div>
	</div>

</div>
</html>